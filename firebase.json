{
	"emulators": {
		"dataconnect": {
			"dataDir": "dataconnect/.dataconnect/pgliteData"
		},
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		},
		"storage": {
			"port": 9199
		},
		"hosting": {
			"port": 5000
		},
		"ui": {
			"enabled": true,
			"port": 4000
		},
		"singleProjectMode": true
	},
	"dataconnect": {
		"source": "dataconnect"
	},
	"functions": {
		"source": "functions"
	},
	"hosting": {
		"public": "dist",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}
